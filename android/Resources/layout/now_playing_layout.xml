<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<ImageView
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:id="@+id/primary_background"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:scaleType="centerCrop"
		android:layout_centerInParent="true"
		android:adjustViewBounds="true"
		android:src="@drawable/wave"/>
	<ImageView
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:id="@+id/secondary_background"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:scaleType="centerCrop"
		android:layout_centerInParent="true"
		android:adjustViewBounds="true"
		android:src="@drawable/wave"/>

	<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:id="@+id/card_layout"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@android:color/transparent" >
		<android.support.v7.widget.RecyclerView
			android:id="@+id/current_queue"
			android:layout_width="match_parent"
			android:layout_height="400dp"
			android:orientation="horizontal"
			android:background="@android:color/transparent"
			android:layout_centerInParent="true"
			android:layout_centerHorizontal="true"
			android:gravity="center"/>

		<ImageView
			android:id="@+id/album_art"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:transitionName="now_playing_transition"
			android:layout_centerInParent="true"
			android:scaleType="centerCrop"
			android:layout_alignParentTop="true"
			android:layout_centerHorizontal="true"
			android:adjustViewBounds="true"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:gravity="center"
			android:layout_alignParentTop="true">
			
		</LinearLayout>
		
		<LinearLayout
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_centerHorizontal="true"
			android:gravity="center">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:gravity="center"
				android:paddingLeft="20dp"
				android:paddingRight="20dp">
				<TextView
					android:id="@+id/title"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerInParent="true"
					android:focusable="true"
					android:maxLines="2"
					android:gravity="center"
					android:textColor="#FFF"
					android:textStyle="bold"
					android:paddingBottom="0dp"
					android:paddingTop="0dp"
					android:background="@drawable/text_background"
					android:textSize="@dimen/title_text_size"/>
				<TextView
					android:id="@+id/artist"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerInParent="true"
					android:singleLine="true"
					android:ellipsize="marquee"
					android:marqueeRepeatLimit="marquee_forever"
					android:scrollHorizontally="true"
					android:focusable="true"
					android:focusableInTouchMode="true"
					android:freezesText="true"
					android:maxLines="1"
					android:textColor="#CCC"
					android:gravity="center"
					android:paddingBottom="0dp"
					android:paddingTop="0dp"
					android:background="@drawable/text_background"
					android:textSize="@dimen/sub_text_size"/>


			</LinearLayout>

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent">

				<ImageView
					android:id="@+id/favorite_button"
					android:layout_width="@dimen/action_buttons_large"
					android:layout_height="@dimen/action_buttons_large"
					android:scaleType="centerCrop"
					android:layout_centerInParent="true"
					android:adjustViewBounds="true"
					android:src="@drawable/not_favorite"/>


			</RelativeLayout>

			<LinearLayout
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginTop="@dimen/layout_section_spacing_large"
				android:layout_marginBottom="@dimen/layout_section_spacing_large"
				android:gravity="center">
				<SeekBar
					android:id="@+id/seekBar"
					android:max="100"
					android:progress="50"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="0dp"/>
				<TextView
					android:id="@+id/duration"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerInParent="true"
					android:textColor="#CCC"
					android:padding="0dp"
					android:gravity="center"
					android:background="@drawable/bottom_background"
					android:textSize="@dimen/sub_text_size"/>

			</LinearLayout>


			<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:tools="http://schemas.android.com/tools"
				android:layout_width="match_parent"
				android:layout_height="@dimen/playback_controller_size_large"
				android:padding="@dimen/playback_controls_padding">
				<ImageButton
					android:id="@+id/previous_button"
					android:layout_centerVertical="true"
					android:layout_width="@dimen/skip_buttons_height_large"
					android:layout_height="@dimen/skip_buttons_height_large"
					android:layout_toLeftOf="@id/play_pause_button"
					android:layout_marginRight="@dimen/button_spacing_large"
					android:scaleType="fitCenter"
					android:background="?selectableItemBackgroundBorderless"
					android:src="@drawable/previous"
					android:contentDescription="@string/play_pause"/>

				<ImageButton
					android:id="@+id/play_pause_button"
					android:layout_height="@dimen/play_button_height_large"
					android:layout_width="@dimen/play_button_height_large"
					android:scaleType="fitCenter"
					android:layout_centerInParent="true"
					android:background="?selectableItemBackgroundBorderless"
					android:src="@drawable/play"
					android:contentDescription="@string/play_pause"/>

				<ImageButton
					android:id="@+id/next_button"
					android:layout_centerVertical="true"
					android:layout_width="@dimen/skip_buttons_height_large"
					android:layout_height="@dimen/skip_buttons_height_large"
					android:layout_toRightOf="@id/play_pause_button"
					android:layout_marginLeft="@dimen/button_spacing_large"
					android:scaleType="fitCenter"
					android:background="?selectableItemBackgroundBorderless"
					android:layout_marginRight="15dp"
					android:src="@drawable/next"
					android:contentDescription="@string/play_pause"/>

			</RelativeLayout>
		</LinearLayout>
	</RelativeLayout>
</RelativeLayout>