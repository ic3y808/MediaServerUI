
.PageToolbar-toolbar.bg-secondary.card-5
    .PageToolbarSection-sectionContainer(style='flex-grow: 8;')
      .PageToolbarSection-section.PageToolbarSection-left
        button.PageToolbarButton-toolbarButton.Link-link.text-white(type='button', ng-click='shuffle()')
          i.fa.fa-sync.fa-w-16.Icon-default(aria-hidden='true', data-prefix='fas', data-icon='sync', role='img', xmlns='http://www.w3.org/2000/svg', viewBox='0 0 512 512', style='font-size: 21px;')
          .PageToolbarButton-labelContainer-1XS0i
            .PageToolbarButton-label.text-white Shuffle
        button.PageToolbarButton-toolbarButton.Link-link.text-white(type='button',ng-click='startRadio()')
          i.fa.fa-rss.fa-w-14.Icon-default(aria-hidden='true', data-prefix='fas', data-icon='rss', role='img', xmlns='http://www.w3.org/2000/svg', viewBox='0 0 448 512', style='font-size: 21px;')
          .PageToolbarButton-labelContainer
            .PageToolbarButton-label.text-white Radio
        

    
.PageToolbarSection-sectionContainer.card-5(style='flex-grow: 1;')
  .PageToolbarSection-section.PageToolbarSection-right
section#mainArtistContent.jumbotron.jumbotron-fluid.text-center.card-5
  .container
    h1.jumbotron-heading.text-white.bg-dark {{artistName}}
    p.lead.text-white.bg-dark
      | {{artistBio}}
    p
      small.text-white Similar Artists
    .btn-group(role='group', aria-label='Basic example')   
      a(type='button', ng-repeat='artist in similarArtists', href="/artist/{{artist.id}}").btn.btn-secondary.btn-sm {{artist.name}}

.album.py-5.bg-light
  .container
    .row
      .col-md-4(ng-repeat='album in albums')
        .card.card-5.mb-4.box-shadow
          img.card-img-top(alt='Thumbnail [100%x225]', style='height: 225px; width: 100%; display: block;', src='{{album.artUrl}}', data-holder-rendered='true')
          .card-body
            p.card-text
              | {{album.name}}
            .d-flex.justify-content-between.align-items-center
              .btn-group
                button.btn.btn-sm.btn-outline-secondary(type='button') Songs: {{album.songCount}}
                button.btn.btn-sm.btn-outline-secondary(type='button') Plays: {{album.playCount}}
              small.text-muted {{album.year}}  
div#tracksGrid.dataTable-inpage
  .ag-theme-material(ag-grid='gridOptions', style='height: 100%;', flex-direction="row")

       