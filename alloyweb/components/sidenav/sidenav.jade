
section.w-f-md.scrollable
  nav.nav-primary.hidden-xs
    ul.nav(data-ride='collapse')
      li
        a(href='/fresh', ng-if="$root.globals.currentUser")
          i.alloy-icon.icon-fresh
          span.font-bold What's new
      li
        a(href='/starred', ng-if="$root.globals.currentUser")
          i.alloy-icon.icon-starred
          b.badge.bg-primary.dker.pull-right {{$root.starred.length}}
          span.font-bold Starred
      li
        a(href='/charts')
          i.alloy-icon.icon-charts
          b.badge.bg-primary.dker.pull-right {{$root.rated.length}}
          span.font-bold Charts
      li
        a(href='/history', ng-if="$root.globals.currentUser")
          i.alloy-icon.icon-history
          b.badge.bg-primary.dker.pull-right {{$root.history.count}}
          span.font-bold History
      li
        a(href='/artists', ng-if="$root.globals.currentUser")
          i.alloy-icon.icon-artists
          b.badge.bg-primary.dker.pull-right {{$root.artists.length}}
          span.font-bold Artists
      li
        a(href='/albums', ng-if="$root.globals.currentUser")
          i.alloy-icon.icon-albums
          b.badge.bg-primary.dker.pull-right {{$root.albums.length}}
          span.font-bold Albums
      li
        a(href='/genres', ng-if="$root.globals.currentUser")
          i.alloy-icon.icon-genres
          b.badge.bg-primary.dker.pull-right {{$root.genres.length}}
          span.font-bold Genres
      li
        a(href='/status')
          i.alloy-icon.icon-status
          span.font-bold Status 
      li
        a.auto(href='#', ng-if="$root.globals.currentUser")
          span.pull-right.text-muted
            i.fa.fa-angle-left.text
            i.fa.fa-angle-down.text-active
          i.alloy-icon.icon-settings.text-xs
          span Config
        ul.nav.dk.text-sm
          li(style="height:30px;")
            a(href='/config/alloydb', title='AlloyDB', style="height:30px;")
              i.alloy-icon.icon-alloydb.text-xs
              span.hidden-nav-xs.font-bold AlloyDB 
          li(style="height:30px;")
            a(href='/database', title='Database', style="height:30px;")
              i.alloy-icon.icon-database.text-xs
              span.hidden-nav-xs.font-bold Database 
          li(style="height:30px;")
            a.auto(href='/config/scheduler', title='Scheduler', style="height:30px;")
              i.alloy-icon.icon-scheduler.text-xs
              span.hidden-nav-xs Scheduler
          li(style="height:30px;")
            a.auto(href='/config/shares', title='Shares', style="height:30px;")
              i.alloy-icon.icon-external-link.text-xs
              span.hidden-nav-xs Shares
          
    ul.nav.text-sm(ng-if="$root.globals.currentUser")
      li.hidden-nav-xs.padder.m-t.m-b-sm.text-xs.text-muted
        span.pull-right
          a(ng-click="showCreatePlaylistModal()")
            i.alloy-icon.icon-plus.i-lg
        | Playlists
    ul.nav.text-sm.sidenav-playlist-list(ng-if="$root.globals.currentUser")
      li(ng-repeat="playlist in $root.playlists")
        a.playlist-link(href='/playlist/{{playlist.id}}')
          i.alloy-icon.icon-playlist.icon
          b.badge.bg-primary.dker.pull-right(ng-if='playlist.tracks') {{playlist.tracks.length}}
          span {{playlist.name}}
    
    #addPlaylistModal.modal.fade(role='dialog')
      .modal-dialog(role='document')
        .modal-content
          .modal-header
            h5#addMediaPathModalLabel.modal-title Create new Playlist
            button.Link-link.close(data-dismiss='modal', type='button', aria-label='Close')
              span(aria-hidden='true') Ã—
          .modal-body
            .FormGroup-group.FormGroup-large
              .FormInputGroup-inputGroupContainer
                .FormInputGroup-inputGroup
                  .FormInputGroup-inputContainer
                    input.Naming-namingInput.TextInput-input.Input-input(ng-model='newPlaylistName', type='text', placeholder='Playlist Name')
            
          .modal-footer
            button.btn.btn-secondary(data-dismiss='modal', type='button') Close
            button.btn.btn-primary(ng-click='createNewPlaylist()', type='button') Add
    // / nav
footer.footer.hidden-xs.no-padder.text-center-nav-xs.bg-dark(style="height:100%;")
  .hidden-xs
    .dropdown.dropup.wrapper-sm.clearfix
      a.dropdown-toggle(href="/playing")
        span.thumb-sm.avatar.pull-left.m-l-xs
          img.dker(src='{{$root.currentTrack.image}}', ng-show="$root.currentTrack.image", alt='...', style="height:100%")
        span.hidden-nav-xs.clear
          span.truncate.block.m-l
            strong.truncate.font-bold.text-lt {{$root.currentTrack.title}}
          span.truncate.text-muted.text-xs.block.m-l {{$root.currentTrack.artist}}