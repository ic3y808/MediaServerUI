{
  "version": "0.2.0",
  "configurations": [{
      "type": "node",
      "request": "launch",
      "name": "ServerDebug",
      "program": "${workspaceFolder}/backend/server.js",
      "env": {
        "DEV": "true",
        "SERVER_HOST": "http://localhost",
        "PORT": "3000",
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "ServerRelease",
      "program": "${workspaceFolder}/backend/server.js",
      "env": {
        "DEV": "false",
        "SERVER_HOST": "http://localhost",
        "PORT": "3000",
      }
    },
    {
      "name": "LaunchChrome",
      "type": "chrome",
      "request": "launch",
      "port": 9222,
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "AttachToChrome",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "url": "*",
      "webRoot": "${workspaceFolder}"
    }
  ],
  "compounds": [{
    "name": "All",
    "configurations": [
      "ServerDebug",
      "LaunchChrome"
    ]
  }]
}