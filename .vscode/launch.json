{
  "version": "0.2.0",
  "configurations": [{
      "type": "node",
      "request": "launch",
      "name": "UI-ServerDebug",
      "program": "${workspaceFolder}/backend/server.js",
      "env": {
        "MODE": "dev",
        "PORT": "3000",
        "JADE_PORT": "34568",
        "USE_ANALYZER": "false"
        //error, warn, info, verbose, debug, silly.
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "UI-ServerRelease",
      "program": "${workspaceFolder}/backend/server.js",
      "env": {
        "MODE": "prod",
        "PORT": "3000"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Backend-ServerDebug",
      "program": "${workspaceFolder}/api/server.js",
      "env": {
        "MODE": "dev",
        "API_PORT": "4000"
        //error, warn, info, verbose, debug, silly.
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Backend-ServerRelease",
      "program": "${workspaceFolder}/api/server.js",
      "env": {
        "MODE": "prod",
        "API_PORT": "4000"
        //error, warn, info, verbose, debug, silly.
      }
    },
    {
      "name": "LaunchChrome",
      "type": "chrome",
      "request": "launch",
      "port": 9222,
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "AttachToChrome",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "url": "*",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "Chrome Api-Docs",
      "type": "chrome",
      "request": "launch",
      "port": 9222,
      "url": "http://localhost:4000/api-docs",
      "webRoot": "${workspaceFolder}"
    }
  ],
  "compounds": [{
    "name": "Debug All",
    "configurations": [
      "UI-ServerDebug",
      "Backend-ServerDebug",
      "LaunchChrome"
    ]
  }]
}