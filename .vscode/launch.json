{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Electron: Main",
      "protocol": "inspector",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
      "cwd": "${workspaceFolder}",
      "env": {
        "MODE":"prod"
      },
      "runtimeArgs": [
        "--remote-debugging-port=9223",
        "."
      ],
      "windows": {
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
      },
      "outputCapture": "std"
    },
    {
      "name": "Electron: Renderer",
      "type": "chrome",
      "request": "attach",
      "port": 9223,
      "webRoot": "${workspaceFolder}",
      "timeout": 30000,
      "url": "http://localhost:3000/template/alloydb.jade"
    },
    {
      "name": "Electron: MediaScanner",
      "type": "chrome",
      "request": "attach",
      "port": 9223,
      "webRoot": "${workspaceFolder}",
      "timeout": 30000,
      "url": "http://localhost:3000/template/mediascanner.jade"
    },
    {
      "name": "Electron: Scheduler",
      "type": "chrome",
      "request": "attach",
      "port": 9223,
      "webRoot": "${workspaceFolder}",
      "timeout": 30000,
      "url": "http://localhost:3000/template/scheduler.jade"
    },
    {
      "name": "Electron: Server",
      "type": "chrome",
      "request": "attach",
      "port": 9223,
      "webRoot": "${workspaceFolder}",
      "timeout": 30000,
      "url": "http://localhost:3000/template/server.jade"
    },
    {
      "name": "Web UI",
      "type": "chrome",
      "request": "attach",
      "port": 9223,
      "webRoot": "${workspaceFolder}",
      "timeout": 5000,
      "url": "http://localhost:3000"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Rebuild Icons",
      "program": "${workspaceFolder}/setup.js",
      "args": [
        "-f"
      ]
    },
    {
      "name": "LaunchChrome",
      "type": "chrome",
      "request": "launch",
      "port": 9222,
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "AttachToChrome",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "url": "*",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "Chrome Api-Docs",
      "type": "chrome",
      "request": "launch",
      "port": 9222,
      "url": "http://localhost:4000/api-docs",
      "webRoot": "${workspaceFolder}"
    }
  ],
  "compounds": [
    {
      "name": "Electron: All",
      "configurations": [
        "Electron: Main",
        "Electron: Renderer",
        "Electron: MediaScanner",
        "Electron: Scheduler",
        "Electron: Server"
      ]
    },
    {
      "name": "Electron: All Release",
      "configurations": [
        "Electron: Main",
        "Electron: Renderer",
        "Electron: MediaScanner",
        "Electron: Scheduler",
        "Electron: Server",
      ]
    },
    {
      "name": "Debug All",
      "configurations": [
        "Electron: Main",
        "Electron: Renderer",
        "Electron: MediaScanner",
        "Electron: Scheduler",
        "Electron: Server",
        "LaunchChrome"
      ]
    },
    {
      "name": "Release All",
      "configurations": [
        "Electron: Main",
        "Electron: Renderer",
        "Electron: MediaScanner",
        "Electron: Scheduler",
        "Electron: Server",
        "LaunchChrome"
      ]
    }
  ]
}