        span.input-group-btn
          button.btn.btn-sm.bg-white.btn-icon.rounded.mainNavButton(ng-click="$root.goForward()")
            i.alloy-icon.icon-forward-arrow
    
        span.input-group-btn
          button.btn.btn-sm.bg-white.btn-icon.rounded.mainNavButton(ng-click="refreshCurrentView()")
            i.alloy-icon.icon-refresh
 
  form.navbar-form.navbar-right.hidden-xs(role='search')
