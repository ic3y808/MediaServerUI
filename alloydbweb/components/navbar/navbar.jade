      i.alloy-icon.icon-headphones
      span.hidden-nav-xs.m-l-sm Alloy 
    a.btn.btn-link.visible-xs(href='/playing')
      i.alloy-icon.icon-controls

  form.navbar-form.navbar-left.hidden-xs(role='search')
    #mainNavGroup.form-group
      .input-group
        span.input-group-btn
          button.btn.btn-sm.bg-white.btn-icon.rounded.mainNavButton(data-target='#nav,.navbar-header', data-toggle='class:nav-xs,nav-xs')
            i.alloy-icon.icon-menu
   
        span.input-group-btn
          button.btn.btn-sm.bg-white.btn-icon.rounded.mainNavButton(ng-click="$root.goBack()")
