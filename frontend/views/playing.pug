.playingWrapper
  .pageToolbar-toolbar.bg-secondary.card-5
    .PageToolbarSection-sectionContainer(style='flex-grow: 8;')
      .PageToolbarSection-section.PageToolbarSection-left
        button.PageToolbarButton-toolbarButton.Link-link(type='button', ng-click='$root.goBack()')
          i.fa.fa-arrow-circle-left.fa-w-16.Icon-default(aria-hidden='true', data-prefix='fas', data-icon='sync', role='img', xmlns='http://www.w3.org/2000/svg', viewBox='0 0 512 512', style='font-size: 21px;')
          .PageToolbarButton-labelContainer
            .PageToolbarButton-label Back
        .PageToolbarSeparator-separator
        button.PageToolbarButton-toolbarButton.Link-link.text-white(type='button',ng-click='startRadio()')
          i.fa.fa-heart-o.fa-w-14.Icon-default(aria-hidden='true', data-prefix='fas', data-icon='rss', role='img', xmlns='http://www.w3.org/2000/svg', viewBox='0 0 448 512', style='font-size: 21px;')
          .PageToolbarButton-labelContainer
            .PageToolbarButton-label.text-white Star

  .playingBodyWrapper.d-flex.flex-column
    .playing-artist-name.bg-dark-transparent {{artistName}} - {{trackTitle}}
    .playing-sub-info.bg-dark-transparent {{year}} - {{contentType}} - Plays: {{playCount}}
    .playing-bio.bg-dark-transparent {{artistBio}}
    .similar-artists-container
      .similar-artist-header.bg-dark-transparent Similar Artists  
        ul.list-inline
          li.list-inline-item(ng-repeat='artist in similarArtists') 
            a(href="/artist/{{artist.id}}").similar-artist-link {{artist.name}}
