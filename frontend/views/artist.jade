.artistWrapper
  #artistHeader 
    .text-center
      h1.jumbotron-heading.text-white.bg-dark-transparent {{artistName}}
      p.lead.text-white.bg-dark-transparent
        | {{artistBio}}
      p
        small.text-white.bg-dark-transparent Similar Artists  
        ul.list-inline
          li.list-inline-item(ng-repeat='artist in similarArtists') 
            a(href="/artist/{{artist.id}}").text-white.bg-dark-transparent {{artist.name}}
  #artistAlbums 
    #coverflow
      ul.flip-items
        li(data-flip-title='Red')
          img(src='https://via.placeholder.com/350x150')
        li(data-flip-title='Razzmatazz', data-flip-category='Purples')
          img(src='https://via.placeholder.com/350x150')
        li(data-flip-title='Deep Lilac', data-flip-category='Purples')
          img(src='https://via.placeholder.com/350x150')
        li(data-flip-title='Daisy Bush', data-flip-category='Purples')
          img(src='https://via.placeholder.com/350x150')
        li(data-flip-title='Cerulean Blue', data-flip-category='Blues')
          img(src='https://via.placeholder.com/350x150')
        li(data-flip-title='Dodger Blue', data-flip-category='Blues')
          img(src='https://via.placeholder.com/350x150')
        li(data-flip-title='Cyan', data-flip-category='Blues')
          img(src='https://via.placeholder.com/350x150')
        li(data-flip-title="Robin's Egg", data-flip-category='Blues')
          img(src='https://via.placeholder.com/350x150')
        li(data-flip-title='Deep Sea', data-flip-category='Greens')
          img(src='https://via.placeholder.com/350x150')
        li(data-flip-title='Apple', data-flip-category='Greens')
          img(src='https://via.placeholder.com/350x150')


  #artistTracks
      #tracksGrid.dataTable-inpage.ag-theme-dark(ag-grid='gridOptions', style='height: 100%; width: 100%;', flex-direction="row")
   
