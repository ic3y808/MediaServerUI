#jp_container_N.vbox
  .jp-type-playlist
    #jplayer_N.jp-jplayer.hide
    .jp-gui
      .jp-video-play.hide
        a.jp-video-play-icon play
      .jp-interface
        .jp-controls
          div
            a(ng-click="skipBack()")
              i.alloy-icon.icon-rewind.i-lg
          div
            a#playPauseButton.jp-play(ng-click="playPause()")
              i#playPauseIcon.alloy-icon.i-2x(ng-class="isPlaying()")

          div
            a(ng-click="skipNext()")
              i.alloy-icon.icon-fast-forward.i-lg
          .hide
            a.jp-stop
              i.alloy-icon.icon-stop
          div
            a(data-toggle='dropdown', data-target='#playlist')
              i.alloy-icon.icon-menu
          div
            a(title='Star', ng-click="starTrack()")
              i.alloy-icon(ng-class="isStarred()")
          .jp-progress.hidden-xs
            #clickProgress.jp-seek-bar.dk(style='width: 100%;')
              #mainProgress.jp-play-bar.bg-info(style='width: {{$root.MediaPlayer.currentProgressPercent}}%;')  
                .jp-title.text-lt.font-bold  {{$root.currentTrack.title}}
                .jp-subtitle.text-lt.text-muted.text-xs {{$root.currentTrack.artist}}

          .hidden-xs.hidden-sm.jp-current-time.text-xs.text-muted
          .hidden-xs.hidden-sm.jp-duration.text-xs.text-muted
 
          .hidden-xs.hidden-sm
            a(title='mute', ng-click="toggleMute()")
              i.alloy-icon(ng-class="isMuted()")

          .hidden-xs.hidden-sm.jp-volume
            volumeslider(direction='horizontal')
            
          div
            a.jp-shuffle(title='shuffle', ng-click="toggleShuffle()")
              i.alloy-icon.icon.icon-shuffle.text-muted
              
          div
            a.jp-repeat(title='repeat', ng-click="toggleRepeat()")
              i.alloy-icon.icon.text-muted(ng-class="isRepeatOn()")

          .hide
            a.jp-full-screen(title='full screen')
              i.fa.fa-expand
            a.jp-restore-screen(title='restore screen')
              i.fa.fa-compress.text-lt
    #playlist.jp-playlist.dropup
      ul.dropdown-menu.aside-xl.dker
        // The method Playlist.displayPlaylist() uses this unordered list
        li.list-group-item




