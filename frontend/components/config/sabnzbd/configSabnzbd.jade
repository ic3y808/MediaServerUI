fieldset.FieldSet-fieldSet
  legend.FieldSet-legend SABnzbd Connection Settings
  div
    div
    .FormGroup-group.FormGroup-large
      label.FormLabel-label.FormLabel-large Host
      .FormInputGroup-inputGroupContainer
        .FormInputGroup-inputGroup
          .FormInputGroup-inputContainer
            input.Naming-namingInput.TextInput-input.Input-input.TextInput-hasButton.Input-hasButton(type='text', placeholder='Database Host', ng-model='$root.settings.sabnzbd.sabnzbd_host', ng-change="previewConnectionString()")
        div
          .FormInputHelpText-helpText Host for SAB
    div
    .FormGroup-group.FormGroup-large
      label.FormLabel-label.FormLabel-large Port
      .FormInputGroup-inputGroupContainer
        .FormInputGroup-inputGroup
          .FormInputGroup-inputContainer
            input.Naming-namingInput.TextInput-input.Input-input.TextInput-hasButton.Input-hasButton(type='number', placeholder='4000', ng-model='$root.settings.sabnzbd.sabnzbd_port', ng-change="previewConnectionString()")
        div
          .FormInputHelpText-helpText Port for SAB
    div
    .FormGroup-group.FormGroup-large
      label.FormLabel-label.FormLabel-large URL Base
      .FormInputGroup-inputGroupContainer
        .FormInputGroup-inputGroup
          .FormInputGroup-inputContainer
            input.Naming-namingInput.TextInput-input.Input-input.TextInput-hasButton.Input-hasButton(type='text', placeholder='/', ng-model='$root.settings.sabnzbd.sabnzbd_url_base')
        div
          .FormInputHelpText-helpText Adds a prefix to the Sabnzbd url, e.g. http://[host]:[port]/[urlBase]/api
    div
    .FormGroup-group.FormGroup-large
      label.FormLabel-label.FormLabel-large ApiKey
      .FormInputGroup-inputGroupContainer
        .FormInputGroup-inputGroup
          .FormInputGroup-inputContainer
            input.Naming-namingInput.TextInput-input.Input-input.TextInput-hasButton.Input-hasButton(type='text', placeholder='Api Key', ng-model='$root.settings.sabnzbd.sabnzbd_apikey')
        div
          .FormInputHelpText-helpText API Key for SAB
    div
    .FormGroup-group.FormGroup-medium
      label.FormLabel-label.FormLabel-large Use SSL?
      .FormInputGroup-inputGroupContainer
        .FormInputGroup-inputGroup
          .FormInputGroup-inputContainer
            .CheckInput-container
              label.CheckInput-label
                input.CheckInput-checkbox(type='checkbox', ng-model='$root.settings.sabnzbd.sabnzbd_use_ssl', ng-change="previewConnectionString()")
                .CheckInput-input.CheckInput-primaryIsChecked(ng-show="$root.settings.sabnzbd.sabnzbd_use_ssl")
                  svg.svg-inline--fa.fa-check.fa-w-16.Icon-default-2wl7E(aria-hidden='true', data-prefix='fas', data-icon='check', role='img', xmlns='http://www.w3.org/2000/svg', viewBox='0 0 512 512', style='font-size: 14px;')
