.generalConfigWrapper
  .generalConfigBodyWrapper.container.h-100
    .row.h-100.justify-content-center
      form.col-6
        .form-group
          label(for='alloydbHost') Host
          input#alloydbHost.form-control(type='text', placeholder='Database Host', ng-model='settings.alloydb_host', ng-change="previewConnectionString()")
        .form-group
          label(for='alloydbPort') Port
          input#alloydbPort.form-control(type='number', placeholder='4000', ng-model='settings.alloydb_port', ng-change="previewConnectionString()")
        .form-group
          label(for='alloydbApiKey') API Key
          input#alloydbApiKey.form-control(type='text', placeholder='Api Key', ng-model='settings.alloydb_apikey')
        .form-check
          input#useSslCheck.form-check-input(type='checkbox', ng-model='settings.alloydb_use_ssl', ng-change="previewConnectionString()")
          label.form-check-label(for='useSslCheck') Use SSL?
        .form-check
          input#includePortInUrl.form-check-input(type='checkbox', ng-model='settings.alloydb_include_port_in_url', ng-change="previewConnectionString()")
          label.form-check-label(for='includePortInUrl') Include port in URL?
        .form-check
          input#scrobbleTracks.form-check-input(type='checkbox', ng-model='settings.alloydb_scrobble')
          label.form-check-label(for='scrobbleTracks') Scrobble Tracks?
        .form-check
          input#loveTracksOnFavorite.form-check-input(type='checkbox', ng-model='settings.alloydb_love_tracks')
          label.form-check-label(for='loveTracksOnFavorite') Love tracks when adding star?
        .form-group
          label(for='lastFmUsername') Last.FM Username
          input#lastFmUsername.form-control(type='text', placeholder='Enter username', ng-model='settings.alloydb_lastfm_username')
        .form-group
          label(for='lastFmPassword') Last.FM Password
          input#lastFmPassword.form-control(type='password', placeholder='Password', ng-model='settings.alloydb_lastfm_password')
        .form-group
          p Preview of Connection string: {{connectionStringPreview}}
        .form-group
          button.btn.btn-block.btn-dark(type='submit', ng-click='saveSettings()') Save
      




